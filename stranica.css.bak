body{
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  margin: 0;
  padding: 0;
  background: url(pozadina.png) no-repeat center center;
  background-size: cover;
}
}
.box{
  width: 450px;
  height: 500px;
	background: rgba(0, 0, 0, 0.4);
  border-radius: 30px;
  padding: 50px;
  text-align: center;
  border: solid black 1px;
  margin: auto;
  margin-top: 10%;
  color: white;
  font-family: 'Century Gothic',sans-serif;
 }

.toggle-btn{
	postiion: absolute;
	left: -40px;
	top: 0;
	width: 40px;
	height: 60px;
	background: #333;
	color: #f1f1f1;
	line-height: 60px;
	text-align: center;
	font-size: 20px;
	cursor: pointer;
}

.box-img{
  border-radius: 50%;
  width: 200px;
  height: 200px;
}

.box h1{
  font-size: 40px;
  font-weight: 200px;
}

.box h5{
  font-size: 22px;
  font-weight: 100px;
}
.box p{
  text-align: justify;
}
ul{
  margin: 0;
  padding: 0;
}
.box li{
  display: inline-block;
  margin: 6px;
  list-style: none;
}
.box li a{
  color: white;
  text-decoration: none;
  font-size: 35px;
  transition: all ease-in-out 250ms;
}
.box li a:hover{
  color: #b9b9b9;
}